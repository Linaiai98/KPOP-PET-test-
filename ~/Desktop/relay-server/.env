# 虚拟宠物中继服务器配置

# 服务器端口
PORT=3000

# 环境模式
NODE_ENV=production

# 日志级别
LOG_LEVEL=info

# 请求超时时间（毫秒）
REQUEST_TIMEOUT=30000

# 最大请求体大小
MAX_REQUEST_SIZE=10mb

# CORS设置
CORS_ORIGIN=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,x-api-key,x-goog-api-key,anthropic-version

# 安全设置
HELMET_ENABLED=true

# 速率限制（每分钟请求数）
RATE_LIMIT=100
